<style>
    @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css");

    table tr {
        border: 1px solid #ccc;
    }

    .button-red {
        display: inline-block;
        background-color: red;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-red:hover {
        background-color: red;
    }


    .button-green {
        display: inline-block;
        background-color: green;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-green:hover {
        background-color: green;
        color: white;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


<div class="container-fluid p-0">
    <div class="container-fluid p-0">
        <div class="row">
            <div><br><br>
                <h2 class="content-title card-title"> Edit Coupon </h2>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0"></h5>
                        <div class="container mt-4">
                            <div class="row">
                                <div class="col-md-4">

                                    <form action="/admin/edit-coupon" method="post">
                                        <div class="mb-3">
                                            <label for="couponCode" class="form-label">Coupon Code</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                                <input type="text" name="couponCode"
                                                    value="<%=couponDetails.couponCode%>" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="discount" class="form-label">Discount</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i
                                                    class="bi bi-currency-rupee"></i></span>
                                                <input type="text" name="discount" value="<%=couponDetails.discount%>"
                                                    class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="minPurchase" class="form-label">Minimum Purchase</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i
                                                    class="bi bi-currency-rupee"></i></span>
                                                <input type="text" name="minPurchase"
                                                    value="<%=couponDetails.minPurchase%>" class="form-control"
                                                    required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="expires" class="form-label">Expires On</label>
                                            <input type="date" name="expires" class="form-control" required value="<%=couponDetails.expires.toISOString().substr(0, 10)%>">
                                        </div>
                                        <input type="text" name="couponId"  value="<%=couponDetails._id%>" class="form-control" hidden>
                                        <div class="form-group mt-3 d-flex justify-content-between">
                                            <a href="/admin/coupon"
                                                class="button-green">Cancel</a>
                                            <button type="submit" class="button-green">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



