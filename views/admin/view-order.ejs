<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css">
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<style>
    input[type="text"],
    select {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    table tr {
        border: 1px solid #ccc;
    }

    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }

    .button-red {
        display: inline-block;
        background-color: red;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-red:hover {
        background-color: red;
    }

    .button-green {
        display: inline-block;
        background-color: green;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-green:hover {
        background-color: green;
    }


    @media (max-width: 320px) {

        input[type="text"],
        select {
            max-width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        table td {
            max-width: none;
        }

        .button-red,
        .button-green {
            display: block;
            margin: 5px auto;
            max-width: 150px;
        }
    }
</style>


<body>
    <section class="container-fluid bg-white mt-3" style="overflow-x: hidden;">
        <div class="row">
            <h1 class="mt-3 fw-bold">Order History</h1>
        </div><br><br>
        <div class="text-center">
            <div class="row table-responsive col-lg-12">
                <table class="table table-bordered" style="max-width:100%" id="productsTable">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Order Date</th>
                            <th scope="col">Name</th>
                            <th scope="col">Product</th>
                            <th scope="col">Address</th>
                            <th scope="col">Pincode</th>
                            <th>Mobile</th>
                            <th>Total Amount</th>
                            <th>Total Quantity</th>
                            <th>Payment Status</th>
                            <th>Payment</th>
                            <th>order status</th>
                            <th>delivery status</th>
                            <th>reason</th>
                            <th>Option</th>
                            <th>View Product</th>
                            <!-- <th></th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% locals.orders.forEach(function(order, index) { %>
                            <% order.products.forEach(prd=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <%= new Date(order.createdAt).toLocaleString('en-US', { month: 'short' ,
                                            day: 'numeric' , year: 'numeric' , hour12: true }) %>
                                    </td>
                                    <td>
                                        <%= order.deliveryDetails.name %>
                                    </td>
                                    <td>
                                        <%= prd.item. productname %>
                                    </td>
                                    <td>
                                        <%= order.deliveryDetails.streetaddress %>, <%= order.deliveryDetails.town %>,
                                                <%= order.deliveryDetails.state %>
                                    </td>
                                    <td>
                                        <%= order.deliveryDetails.zip %>
                                    </td>
                                    <td>
                                        <%= order.deliveryDetails.mobile %>
                                    </td>
                                    <td>â‚¹<%= (prd.currentPrice + prd.tax)*prd.quantity - order.coupon %>
                                    </td>
                                    <td>
                                        <%= prd.quantity %>
                                    </td>
                                    <td>
                                        <%= order.paymentstatus %>
                                    </td>
                                    <td>
                                        <%= order.paymentMethod %>
                                    </td>
                                    <td>
                                        <%= prd.orderstatus %>
                                    </td>
                                    <form
                                        action="/admin/order-details/?orderId=<%=order._id %>&productId=<%= prd.item._id %>"
                                        method="post">
                                        <td>
                                            <select name="deliveryStatus" id="" <%=(prd.orderstatus==='cancelled' ||
                                                order.paymentstatus==='failed' ) ? 'disabled' : '' %>>

                                                <option value="default">
                                                    <%= prd.deliverystatus %>
                                                </option>
                                                <option value="shipped">
                                                    shipped
                                                </option>
                                                <option value="outofdelivery">
                                                    out for delivery
                                                </option>
                                                <option value="delivered">
                                                    delivered
                                                </option>
                                                <option value="cancelled">
                                                    cancelled
                                                </option>
                                                <!-- <option value="returned">
                                                    returned
                                                </option> -->

                                            </select>
                                        </td>
                                        <td>
                                            <%= prd.reason%>
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-success">save</button>
                                        </td>
                                        <td>
                                            <a href="/admin/order-productDetails/?orderId=<%=order._id %>&productId=<%= prd.item._id %>"
                                                class="text-muted"><i class="fa fa-eye" aria-hidden="true"></i></a>

                                        </td>
                                    </form>
                                </tr>
                                <% }) %>
                                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable();
        });

    </script>
    <style>
        .swal2-icon .swal2-icon-content {
            font-size: 1.75em;
        }
    </style>