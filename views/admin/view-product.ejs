<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css">
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<style>
    input[type="text"],
    select {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    table tr {
        border: 1px solid #ccc;
    }

    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }

    .button-red {
        display: inline-block;
        background-color: red;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-red:hover {
        background-color: red;
    }

    .button-green {
        display: inline-block;
        background-color: green;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
    }

    .button-green:hover {
        background-color: green;
    }


    @media (max-width: 320px) {

        input[type="text"],
        select {
            max-width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        table td {
            max-width: none;
        }

        .button-red,
        .button-green {
            display: block;
            margin: 5px auto;
            max-width: 150px;
        }
    }
</style>


<body>
    <section class="container-fluid bg-white mt-3" style="overflow-x: hidden;">
        <div class="row">
            <h1 class="mt-3 fw-bold">Products</h1>
            <div class="mt-2 d-flex"><a href="/admin/add-product" class="btn btn-success ms-auto">Add Products</a></div>
        </div>

        <div class="text-center">
            <div class="row table-responsive col-lg-12">
                <table class="table table-bordered" style="width:100%" id="productsTable">
                    <thead>
                        <tr>
                            <th scope="col">Brand</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Type</th>
                            <th scope="col">Price</th>
                            <th scope="col">Stock</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(function(products) { %>
                            <tr>
                                <td>
                                    <%= products.brand %>
                                </td>
                                <td>
                                    <%= products.productname %>
                                </td>
                                <td>
                                    <%= products.producttype %>
                                </td>
                                <td>
                                    <%= products.price %>
                                </td>
                                <td>
                                    <%= products.stock %>
                                </td>
                                <td><img width="50px" height="50px" src="/uploads/<%= products.images[0] %>"
                                        alt="Product Image" width="100" height="100"></td>
                                <td>
                                    <a href="/admin/edit-product/<%= products._id %>" class="button-green">Edit</a>

                                    <a href="javascript:void(0);" class="button-red"
                                        onclick="confirmDelete('<%= products._id %>')">Soft Delete</a>
                                </td>

                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>


        function confirmDelete(subcategoryId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                // icon: 'warning',
                icon: 'question',
                iconHtml: 'ØŸ',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: '/admin/delete-product/' + subcategoryId,
                        method: "GET",
                        success: (response) => {
                            if (response.status) {
                                Swal.fire(
                                    'Deleted!',
                                    'Your file has been deleted.',
                                    'success'
                                ).then(() => {
                                    location.reload(); // reload the current page
                                })
                            }
                        }
                    })
                }
            }).catch(error => {
                console.error(error);
                Swal.fire('Error!', 'An error occurred while deleting the subcategory.', 'error');
            });

        }

        $(document).ready(function () {
            $('#productsTable').DataTable();
        });



    </script>


    <style>
        .swal2-icon .swal2-icon-content {
            font-size: 1.75em;
        }
    </style>