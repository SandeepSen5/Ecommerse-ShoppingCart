<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'>

<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Edit Product</h2>
                <div>
                    <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                    <!-- <button class="btn btn-md rounded font-sm hover-up"> </button> -->
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Basic</h4>
                </div>
                <div class="card-body">
                    <form onsubmit="return validateForm()" action="/admin/edit-product/<%= products._id %>"
                        method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="brand" class="form-label">Brand</label>
                            <input type="text" placeholder="Brand" name="brand" class="form-control" id="brand"
                                aria-describedby="emailHelp" value="<%= products.brand %>" required>
                        </div>
                        <div class="mb-4">
                            <label for="productname" class="form-label">Product Name</label>
                            <input type="text" placeholder="Product Name" name="productname" class="form-control"
                                id="productname" aria-describedby="emailHelp" required
                                value="<%=products.productname %>">
                        </div>
                        <div class="mb-4">
                            <label for="producttype" class="form-label">Product Type</label>
                            <input type="text" placeholder="producttype" name="producttype" class="form-control"
                                id="producttype" aria-describedby="emailHelp" value="<%= products.producttype%>"
                                required>
                        </div>
                        <div class="mb-4">
                            <label for="categoryDescription">Category</label>
                            <select class="form-control" id="categoryDescription" name="category" required>
                                <option value="" disabled>Select category description</option>
                                <% categories.forEach(category=> { %>
                                    <option value="<%= category._id %>" <% if
                                        (category._id.toString()===products.category.toString()) { %>selected<% } %>>
                                            <%= category.category %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="subcategoryDescription">Subcategory</label>
                            <select class="form-control" id="subcategoryDescription" name="subcategory" required>
                                <option value="" disabled>Select Subcategory</option>
                                <% subcategories.forEach(subcategory=> { %>
                                    <option value="<%= subcategory._id %>" <% if
                                        (subcategory._id.toString()===products.subcategory.toString()) { %>selected<% }
                                            %>>
                                            <%= subcategory.subcategory %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label for="price" class="form-label">Regular price</label>
                                    <div class="row gx-2">
                                        <input placeholder="$" name="price" type="text" class="form-control" id="price"
                                            value="<%= products.price%>" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label for="discountPerc" class="form-label">Discount in percentage</label>
                                    <input placeholder="$" name="discountPerc" type="text" id="discountPerc"
                                        class="form-control" value="<%= products.discountPerc%>">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label class="form-label" for="myselect">Size</label>
                                <select class="form-select" name="size" id="myselect" value="<%= products.size%>">
                                    <option> Small </option>
                                    <option> Medium </option>
                                    <option> Large </option>
                                </select>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label for="stock" class="form-label">Stock</label>
                                    <div class="row gx-2">
                                        <input placeholder="" name="stock" type="text" class="form-control" id="stock"
                                            value="<%= products.stock%>" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="mb-4">
                            <label class="form-label">Tax rate</label>
                            <input type="text" placeholder="%" class="form-control" id="product_name">
                        </div>
                        <label class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" value="">
                            <span class="form-check-label"> Make a template </span>
                        </label> -->

                        <div class="mb-4">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h4>Media</h4>
                                </div>
                                <div class="card-body">
                                    <div class="input-upload">
                                        <img src="/imgs/theme/upload.svg" alt="">
                                        <label for="image" class="form-label"></label>

                                        <input type="file" id="image" name="image" class="form-control" multiple><br>

                                        <% products.images.forEach(image=> { %>
                                            <img src="/uploads/<%= image %>" alt="Product Image"
                                                style="width:75px; height:75px;">
                                            <% }) %>
                                    </div>
                                </div>
                            </div>
                            <div class="card mb-4">
                                <!-- <div class="card-header">
                                    <h4>Category Input</h4>
                                </div> -->
                                <div class="card-body">
                                    <div class="row gx-2">
                                        <!-- <div class="col-sm-6 mb-3">
                                            <label class="form-label">Category</label>
                                            <select class="form-select">
                                                <option> Automobiles </option>
                                                <option> Home items </option>
                                                <option> Electronics </option>
                                                <option> Smartphones </option>
                                                <option> Sport items </option>
                                                <option> Baby and Tous </option>
                                            </select>
                                        </div> -->
                                        <!-- <div class="col-sm-6 mb-3">
                                            <label class="form-label">Sub-category</label>
                                            <select class="form-select">
                                                <option> Nissan </option>
                                                <option> Honda </option>
                                                <option> Mercedes </option>
                                                <option> Chevrolet </option>
                                            </select>
                                        </div> -->
                                        <div>
                                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                        </div>
                                    </div>
                    </form>
                </div>
            </div> <!-- card end// -->

        </div>

    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>

<script>

    function confirmDelete(subcategoryId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            // icon: 'warning',
            icon: 'question',
            iconHtml: '؟',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/admin/delete-product/' + subcategoryId,
                    method: "GET",
                    success: (response) => {
                        if (response.status) {
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                location.reload(); // reload the current page
                            })
                        }
                    }
                })
            }
        }).catch(error => {
            console.error(error);
            Swal.fire('Error!', 'An error occurred while deleting the subcategory.', 'error');
        });
    }

    function validateForm() {
        var brandInput = document.getElementById("brand");
        var productNameInput = document.getElementById("productname");
        var producttypeInput = document.getElementById("producttype");
        var priceInput = document.getElementById("price");
        var discountPercInput = document.getElementById("discountPerc");
        var stockInput = document.getElementById("stock");
        var imageInput = document.getElementById("image");

        // add similar code for other form fields

        if (brandInput.value.trim() === "" || stockInput.value.trim() === "" || productNameInput.value.trim() === "" || producttypeInput.value.trim() === "" || priceInput.value.trim() === "" || discountPercInput.value.trim() === "") {
            swal({
                title: 'Error!',
                text: 'Enter Valid Field Inputs',
                icon: 'error',
                button: 'OK'
            });
            return false; // prevent form submission
        }

        var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
        for (var i = 0; i < imageInput.files.length; i++) {
            var file = imageInput.files[i];
            var fileName = file.name;

            if (!allowedExtensions.exec(fileName)) {
                swal({
                    title: 'Error!',
                    text: 'Please select valid image files only (JPEG, JPG, PNG, GIF).',
                    icon: 'error',
                    button: 'OK'
                });
                return false; // prevent form submission
            }
        }

        if (discountPercInput.value < 0 || priceInput.value < 0 || discountPercInput.value >100 ) {
            // Use SweetAlert to display an alert to the user
            swal({
                title: 'Error!',
                text: 'Enter Valid Price Details',
                icon: 'error',
                button: 'OK'
            });
            return false;
        }

        if (stockInput.value< 0 ) {
            // Use SweetAlert to display an alert to the user
            swal({
                title: 'Error!',
                text: 'Stock cannot be less than zero',
                icon: 'error',
                button: 'OK'
            });
            return false;
        }
        swal({
            title: 'Success!',
            text: 'Product Edited successfully',
            icon: 'success',
            button: 'OK'
        });
        return true; // allow form submission
    }
</script>