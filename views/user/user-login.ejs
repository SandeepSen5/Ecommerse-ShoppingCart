<body>
  <section class="content-main mt-80 mb-80">
    <div class="card mx-auto card-login">
      <div class="card-body">
        <h1 class="text-center custom-heading"># Let's Shop
          <h3 class="text-center custom-heading">User Login</h3></h1>
       
        <% if(success_msg !='' ){ %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= success_msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>
            <% if(error_msg !='' ){ %>
              <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error_msg %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              <% } %>
                <form action="/user/user-login" method="post">
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                      aria-describedby="emailHelp" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                  </div> <!-- form-group// -->
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                      value="<%= typeof password != 'undefined' ? password : '' %>" required>
                  </div> <!-- form-group// -->
                  <div class="mb-3">
                    <!-- <a href="#" class="float-end font-sm text-muted">Forgot password?</a><br> -->
                  </div> <!-- form-group form-check .// -->
                  <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100"> Login </button>
                  </div> <!-- form-group// -->
                </form>

                <p class="text-center small text-muted mb-15">or sign up with</p>
                <div class="mb-4">
                  <a class="btn btn-primary w-100" href="/user/user-otp">OTP Login</a>
                </div>
                <p class="text-center mb-4">Don't have account? <a href="/user/user-signup">Sign up</a></p>
      </div>
    </div>
  </section>


