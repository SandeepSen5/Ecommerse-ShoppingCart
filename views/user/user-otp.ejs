<body>
    <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title mb-4">Hello!</h4>
                <h5 class="card-title mb-4"> OTP Authentication</h5>
                <% if(error_msg !='' ){ %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <form action="/user/user-otp" method="post">
                            <div class="mb-3">
                                <input name="number" id="number" class="form-control" placeholder="Enter Phone Number"
                                    aria-describedby="emailHelp" autocomplete="off" required><br>
                                <button type="submit" name="button" class="btn-primary">Submit</button>
                            </div>
                        </form>

            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
