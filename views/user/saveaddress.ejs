    <script>

        $(document).ready(function () {
            // Hide the form initially
            $("#checkout-form").hide();

            // Show the form when clicking "Add New Address" button
            $("#add-new-address").on("click", function () {
                $("#checkout-form").show();
            });

            // Hide the "SAVED YOUR ADDRESSES" message when clicking "Add New Address" button
            $("#add-new-address").on("click", function () {
                $("#saved-addresses-message").hide();
                $("#checkout-form").show();
            });
        });


        function deleteAddress(addressId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                // icon: 'warning',
                icon: 'question',
                iconHtml: '؟',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {

                    $.ajax({
                        url: `/user/delete-Address/${addressId}`,
                        type: "DELETE",
                        success: (response) => {
                            if (response.status) {
                                Swal.fire(
                                    'Deleted!',
                                    'Address deleted.',
                                    'success'
                                ).then(() => {
                                    location.reload(); // reload the current page
                                })
                            }
                        },
                        error: function (error) {
                            console.error(error);
                            Swal.fire('Error!', 'An error occurred while deleting the subcategory.', 'error');
                        }
                    });
                }
            });
        }

    </script>


